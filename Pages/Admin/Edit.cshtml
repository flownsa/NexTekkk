}

<h1>Edit</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employee.FirstName" class="control-label"></label>
                <input asp-for="Employee.FirstName" class="form-control" />
                <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.LastName" class="control-label"></label>
                <input asp-for="Employee.LastName" class="form-control" />
                <span asp-validation-for="Employee.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Dob" class="control-label"></label>
                <input asp-for="Employee.Dob" class="form-control" />
                <span asp-validation-for="Employee.Dob" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Password" class="control-label"></label>
                <input asp-for="Employee.Password" class="form-control" />
                <span asp-validation-for="Employee.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.NoOfChildren" class="control-label"></label>
                <input asp-for="Employee.NoOfChildren" class="form-control" />
                <span asp-validation-for="Employee.NoOfChildren" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Employee.Id" />
            <div class="form-group">
                <label asp-for="Employee.UserName" class="control-label"></label>
                <input asp-for="Employee.UserName" class="form-control" />
                <span asp-validation-for="Employee.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Email" class="control-label"></label>
                <input asp-for="Employee.Email" class="form-control" />
                <span asp-validation-for="Employee.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.PasswordHash" class="control-label"></label>
                <input asp-for="Employee.PasswordHash" class="form-control" />
                <span asp-validation-for="Employee.PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.SecurityStamp" class="control-label"></label>
                <input asp-for="Employee.SecurityStamp" class="form-control" />
                <span asp-validation-for="Employee.SecurityStamp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.PhoneNumber" class="control-label"></label>
                <input asp-for="Employee.PhoneNumber" class="form-control" />
                <span asp-validation-for="Employee.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Employee.PhoneNumberConfirmed" /> @Html.DisplayNameFor(model => model.Employee.PhoneNumberConfirmed)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
